{
    "name": "pjatk-edux-crawler",
    "version": "1.0.0",
    "description": "An easy way to see new notifications on the EDUX platform.",
    "main": "index.js",
    "scripts": {
        "config": "cp .env.dist .env",
        "start": "node index.js",
        "lint": "tsc --noEmit -p . && tslint \"*.ts\"",
